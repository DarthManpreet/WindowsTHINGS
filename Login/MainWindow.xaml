<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="THINGS" Height="350" Width="564">
    <Grid x:Name="passwordBox" Background="#FF911F1F">
        <Grid Background="#FF2B2A2A" Margin="160,90,161,90">
            <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontSize="14" Margin="10,26,0,0"/>
            <PasswordBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="219" FontSize="14" Margin="10,74,0,0"/>
            <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Margin="0,48,0,0"/>
            <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="61" Height="24" RenderTransformOrigin="1,0.333" IsDefault="True" Background="#FF34C748" Margin="168,105,0,0"/>
            <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
