<Window x:Class="LoginForm.Checkout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginForm"
        mc:Ignorable="d"
        Title="Checkout" Height="500" Width="800" MinWidth="800" MinHeight="500">
    <Grid>
        <DockPanel>
            <Menu x:Name="menuBar" DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="Checkin"/>
                    <MenuItem Header="Request"/>
                    <MenuItem Header="_Quit"/>
                </MenuItem>
            </Menu>
            <StackPanel>
                <DataGrid x:Name="checkoutGrid" Height="301" Width="487" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Name"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Description"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Quantity"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
